<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>


    <style name="FullScreenTheme" parent="AppTheme">
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:background">@mipmap/test_bg</item>-->
    </style>

    <style name="FullTransTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="CheckRedStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_red_style</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="CheckBlueStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_blue_style</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="InputStyle">
        <!-- 底部线 默认颜色 -->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 底部线 EditText激活时颜色 -->
        <item name="colorControlActivated">@color/white</item>
        <!-- 设置光标 -->
        <!--<item name="android:textCursorDrawable">@drawable/line</item>-->
    </style>

    <style name="AccountButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="CommonLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_layout_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TranslucentNoTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 隐藏标题栏 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="CommonTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/main_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/CommonTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="CommonTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="dialog_animate">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="YellowRatingStyle">
        <item name="colorFillOff">@android:color/transparent</item>
        <item name="colorFillOn">#f1b23b</item>
        <item name="colorFillPressedOff">@android:color/transparent</item>
        <item name="colorFillPressedOn">#f1b23b</item>
        <item name="colorOutlineOff">#f1b23b</item>
        <item name="colorOutlineOn">#f1b23b</item>
        <item name="colorOutlinePressed">#f1b23b</item>
        <item name="polygonVertices">5</item>
        <item name="polygonRotation">0</item>
        <item name="strokeWidth">5dp</item>
        <item name="android:progress">20</item>
        <item name="android:max">100</item>
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">1</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#333333</item>
    </style>

    <style name="ColorDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#333333</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
