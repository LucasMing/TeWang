<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back_color"
    android:orientation="vertical"
    tools:context=".ui.NewFeedbackActivity">

    <com.qing.tewang.widget.SmartTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:smartTitleBarTitleText="用户反馈" />

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:gravity="left"
        android:hint="请填写您的意见"
        android:padding="6dp"
        android:textColor="#333333"
        android:textColorHint="#666666"
        android:textSize="14sp" />

    <Button
        android:id="@+id/commit"
        style="@style/AccountButtonStyle"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="提交"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_pwd" />


</android.support.v7.widget.LinearLayoutCompat>